package test;

/**
 * test
 */
public class test {
   public static void main(String[] args) {
      Person p1 = new Person();
   p1.name= "胡逸飞";
   p1.age =100;
   System.out.println(p1.name);
   p1.study();
   p1.showAge();
   p1.addAge(20);
  
   System.out.println(p1.age);
   }
   
   
}


class Person{
   String name;
   int age;
   int sex;

   public void study() {
      System.out.println("studying");
   }
   public void showAge() {
      System.out.println(age);
   }
   public void addAge(int year) {
      age+=year;
   }
}
